<% unless cart.line_items.empty? %>
<article class="cart">
  <% if notice %>
    <aside id="notice"><%= notice %></aside>
  <% end %>
  <h2><%= t('.title') %></h2>
  <table class="line-items">
    <%= render cart.line_items %>
    <tfoot>
    <tr>
      <th colspan="2"><%= t('.total') %>:</th>
      <td class="price"><%= number_to_currency(cart.total_price) %></td>
    </tr>
    </tfoot>
  </table>
  <div class="actions">
    <%= button_to t('.empty'), cart, method: :delete, data: { confirm: t('.confirm') }, remote: true %>
    <%= button_to t('.checkout'), new_order_path(locale: I18n.locale), method: :get,  class: 'checkout', disabled: @disable_checkout %>
  </div>
</article>
<% end %>
