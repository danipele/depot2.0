<% if notice %>
  <aside id="notice"><%= notice %></aside>
<% end %>
<h1>Your Pragmatic Catalog<% if session[:count_index_accessed] > 5 %> - accessed <%= session[:count_index_accessed] %> times.<% end %></h1>
<ul class="catalog">
  <% cache @products do %>
    <% @products.each do |product| %>
      <% cache product do %>
        <% if @updated_product == product %>
        <li class="line-item-highlight">
        <% else %>
        <li>
        <% end %>
          <%= link_to image_tag(product.image_url), line_items_path(product_id: product), method: :post, remote: true %>
          <h2><%= product.title %></h2>
          <p>
            <%= sanitize(product.description) %>
          </p>
          <div class="price">
            <%= number_to_currency(product.price, unit: 'RON', precision: 3) %>
          </div>
          <%= button_to 'Add to Cart', line_items_path(product_id: product), remote: true %>
        </li>
      <% end %>
    <% end %>
  <% end %>
</ul>